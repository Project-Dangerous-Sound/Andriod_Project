<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:id="@+id/sub_toolbar4"
    tools:context=".PriorityActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:context="com.example.codestudio.myapplication.MainActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="89dp"
            android:text="에 대한 총 "
            android:textColor="@color/black"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/whiteButtonCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="148dp"
            android:layout_marginTop="90dp"
            android:textColor="#0000FF"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="169dp"
            android:layout_marginTop="90dp"
            android:text="건"
            android:textColor="#0000FF"
            android:textSize="30dp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button6"
            android:layout_width="363dp"
            android:layout_height="47dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/ripple_custom"
            android:text="더보기"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <SearchView
            android:id="@+id/searchView"
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/ripple_custom" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="395dp"
        android:layout_height="283dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="112dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.363"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.363">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button1"
            android:layout_width="375dp"
            android:layout_height="47dp"
            android:background="@drawable/ripple_custom"
            android:enabled="true"
            android:text="  Q. 개발자 정보 안내(Developer Information)"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="15dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button2"
            android:layout_width="375dp"
            android:layout_height="47dp"
            android:background="@drawable/ripple_custom"
            android:enabled="true"
            android:text="  Q. 사용하는 방법 안내(How to use)"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="15dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button3"
            android:layout_width="375dp"
            android:layout_height="47dp"
            android:background="@drawable/ripple_custom"
            android:enabled="true"
            android:text="  Q. 버전 및 업데이트 안내(Version or Update)"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="15dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button4"
            android:layout_width="375dp"
            android:layout_height="47dp"
            android:background="@drawable/ripple_custom"
            android:enabled="true"
            android:text="  Q. 고객센터 안내(Customer Service Center)"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="15dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button5"
            android:layout_width="375dp"
            android:layout_height="47dp"
            android:background="@drawable/ripple_custom"
            android:enabled="true"
            android:text="  Q. 건의사항(Suggestions)"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="15dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>